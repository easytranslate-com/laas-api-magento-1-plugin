<?xml version="1.0"?>
<config>
    <sections>
        <easytranslate translate="label" module="easytranslate">
            <label>EasyTranslate Connector</label>
            <tab>service</tab>
            <sort_order>500</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <api translate="label" module="easytranslate">
                    <label>API</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <environment translate="label" module="easytranslate">
                            <label>Environment</label>
                            <frontend_type>select</frontend_type>
                            <source_model>easytranslate/adminhtml_system_config_source_api_environment</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </environment>
                        <client_id translate="label comment" module="easytranslate">
                            <label>Client ID</label>
                            <comment>You can find it in your EasyTranslate account under Settings > API.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </client_id>
                        <client_secret translate="label comment" module="easytranslate">
                            <label>Client Secret</label>
                            <comment>You can find it in your EasyTranslate account under Settings > API.</comment>
                            <frontend_type>obscure</frontend_type>
                            <backend_model>adminhtml/system_config_backend_encrypted</backend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </client_secret>
                        <username translate="label comment" module="easytranslate">
                            <label>User Name</label>
                            <comment>Enter the same credentials you use for the EasyTranslate platform.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </username>
                        <password translate="label comment" module="easytranslate">
                            <label>Password</label>
                            <comment>Enter the same credentials you use for the EasyTranslate platform.</comment>
                            <frontend_type>obscure</frontend_type>
                            <backend_model>adminhtml/system_config_backend_encrypted</backend_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </password>
                    </fields>
                </api>
                <products translate="label" module="easytranslate">
                    <label>Products</label>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <attributes translate="label" module="easytranslate">
                            <label>Attributes</label>
                            <comment>Select the product attributes, which should be translated.</comment>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>easytranslate/adminhtml_system_config_source_eav_attributes_product</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </attributes>
                    </fields>
                </products>
                <categories translate="label" module="easytranslate">
                    <label>Categories</label>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <attributes translate="label" module="easytranslate">
                            <label>Attributes</label>
                            <comment>Select the category attributes, which should be translated.</comment>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>easytranslate/adminhtml_system_config_source_eav_attributes_category</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </attributes>
                    </fields>
                </categories>
                <cms_blocks translate="label" module="easytranslate">
                    <label>CMS Blocks</label>
                    <sort_order>40</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <attributes translate="label" module="easytranslate">
                            <label>Attributes</label>
                            <comment>Select the CMS block attributes, which should be translated.</comment>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>easytranslate/adminhtml_system_config_source_cms_block_attributes</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </attributes>
                    </fields>
                </cms_blocks>
                <cms_pages translate="label" module="easytranslate">
                    <label>CMS Pages</label>
                    <sort_order>50</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <attributes translate="label" module="easytranslate">
                            <label>Attributes</label>
                            <comment>Select the CMS page attributes, which should be translated.</comment>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>easytranslate/adminhtml_system_config_source_cms_page_attributes</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </attributes>
                    </fields>
                </cms_pages>
            </groups>
        </easytranslate>
    </sections>
</config>
